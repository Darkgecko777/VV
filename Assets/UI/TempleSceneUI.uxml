        <ui:VisualElement name="TabBar" class="tab-bar" style="position: absolute; top: 10px; left: 50px; width: 1820px; height: 50px; flex-direction: row;">
            <ui:Button name="RecruitTab" text="Recruit" class="tab-button" />
            <ui:Button name="ExpeditionTab" text="Expedition" class="tab-button" />
            <ui:Button name="VirusTab" text="Virus" class="tab-button" />
        </ui:VisualElement>
        <ui:VisualElement name="TabContentContainer" style="position: absolute; top: 70px; left: 50px; width: 1820px; height: 950px;">
            <ui:VisualElement name="RecruitTabContent" class="tab-content">
                <ui:VisualElement name="RecruitPortraitContainer" style="position: absolute; top: 10px; width: 1820px; height: 150px; flex-direction: row;" />
                <ui:VisualElement name="RecruitButtonContainer" style="position: absolute; top: 170px; width: 400px; height: 50px; flex-direction: row;">
                    <ui:Button name="GenerateButton" text="Generate Expedition" class="button" />
